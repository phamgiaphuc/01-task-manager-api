{
     "version": 2,
     "builds": [
          {
               "src": "./app.js",
               "use": "@vercel/node"
          }
     ],
     "routes": [
          {
               "src": "/(.*)",
               "dest": "app.js"
          },
          {
               "src": "/api/v1/tasks",
               "dest": "./app.js"
          },
          {
               "src": "/api/v1/tasks/([a-zA-Z0-9-]+)",
               "dest": "./app.js",
               "methods": ["GET", "PATCH", "DELETE"]
          },
          {
               "src": "/api/v1/tasks",
               "dest": "./app.js",
               "methods": ["POST"]
          }
     ]
}